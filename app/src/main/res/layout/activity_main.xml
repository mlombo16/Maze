<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimary"    android:padding="0dp"    tools:context="com.example.marlene.maze.MainActivity">    <ImageView        android:id="@+id/ivBall"        android:layout_width="30dp"        android:layout_height="30dp"        android:layout_marginLeft="8dp"        android:layout_marginStart="186dp"        android:layout_marginTop="16dp"        android:adjustViewBounds="false"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:srcCompat="@drawable/ball" />    <ImageView        android:id="@+id/ivFinish"        android:layout_width="41dp"        android:layout_height="42dp"        android:layout_marginBottom="16dp"        android:layout_marginRight="16dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:srcCompat="@drawable/finish"        tools:layout_editor_absoluteX="327dp"        tools:layout_editor_absoluteY="453dp" />    <Button        android:id="@+id/btnRestart"        android:layout_width="148dp"        android:layout_height="94dp"        android:layout_marginLeft="24dp"        android:layout_marginRight="24dp"        android:layout_marginTop="24dp"        android:text="Restart"        android:textSize="24sp"        android:visibility="gone"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@+id/txtMsg" />    <ImageView        android:id="@+id/ivBlock"        android:layout_width="262dp"        android:layout_height="62dp"        android:layout_marginLeft="-1dp"        android:layout_marginTop="121dp"        android:scaleType="fitXY"        android:scaleX="-1"        android:src="@drawable/barbwire"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:srcCompat="@drawable/barbwire" />    <ImageView        android:id="@+id/ivBlock2"        android:layout_width="262dp"        android:layout_height="62dp"        android:layout_marginRight="0dp"        android:layout_marginTop="150dp"        android:scaleType="fitXY"        app:layout_constraintRight_toRightOf="parent"        app:srcCompat="@drawable/barbwire"        app:layout_constraintBottom_toBottomOf="parent"        android:layout_marginBottom="150dp" />    <TextView        android:id="@+id/txtMsg"        android:layout_width="239dp"        android:layout_height="96dp"        android:layout_marginLeft="8dp"        android:layout_marginRight="8dp"        android:layout_marginTop="200dp"        android:background="@color/colorbg"        android:text="You lost."        android:textAlignment="center"        android:textColor="@color/colorAccent"        android:textSize="50sp"        android:visibility="gone"        app:layout_constraintHorizontal_bias="0.503"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent" /></android.support.constraint.ConstraintLayout>